
generator client {
  provider = "prisma-client"
  output   = "../../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  STUDENT
  TUTOR
  ADMIN
}

enum UserStatus {
  ACTIVE
  BANNED
}

enum BookingStatus {
  CONFIRMED
  COMPLETED
  CANCELLED
}


model User {
  id        String      @id @default(uuid())
  name      String
  email     String      @unique
  password  String
  profileAvater String?
  role      Role
  status    UserStatus  @default(ACTIVE)
emailVerified Boolean
  // Relations
  tutorProfile TutorProfile?
  studentBookings Booking[] @relation("StudentBookings")

  reviewsGiven    Review[]  @relation("StudentReviews")


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


model TutorProfile {
  id           String   @id @default(uuid())
  userId       String   @unique
  bio          String
  hourlyRate   Int
  // Availability stored as ISO strings
  // [morning,evening,night]
  availability Availability[]

  // Relations
  user        User      @relation(fields: [userId], references: [id])
  // [math,english]
  subjects  String[]
  categoryId  String
  category  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
model Availability {
  id        String       @id @default(uuid())
  tutorId   String
  tutor     TutorProfile @relation(fields: [tutorId], references: [id])
  date      DateTime
  bookings Booking[]
  startTime String
  isBooked  Boolean  @default(false)
  endTime   String
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
}

model Category {
  id    String @id @default(uuid())
  name  String @unique
  subjects  String[]
  createdAt DateTime @default(now())
}


model Booking {
  id        String        @id @default(uuid())
  studentId String
  tutorId   String
  dateTime  DateTime
  status    BookingStatus @default(CONFIRMED)
availabilityId String       // link to availability slot
  // Relations
  student User @relation("StudentBookings", fields: [studentId], references: [id])
  review  Review?
   
  availability   Availability @relation(fields: [availabilityId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}



model Review {
  id        String @id @default(uuid())
  bookingId String @unique
  studentId String
  tutorId   String

  rating    Int
  comment   String

  // Relations
  booking Booking @relation(fields: [bookingId], references: [id])
  student User    @relation("StudentReviews", fields: [studentId], references: [id])
  createdAt DateTime @default(now())
}
